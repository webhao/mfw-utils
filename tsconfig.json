{
    "compilerOptions": {
        "sourceMap": true, //代码映射
        "noImplicitAny": true, //强类型检查
        "module": "es2015",
        "target": "es2015",
        "allowJs": true,
        "allowSyntheticDefaultImports": true //允许从没有设置默认导出的模块中默认导入。
    },
    "include": [
        "./src/**/*",
        "./src/*"
    ]
  }